<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="useDefStyleAttr" format="boolean"/>
        <attr name="useDefStyleRes" format="boolean"/>
    </declare-styleable>

    <style name="style">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="custom_defStyleRes">
        <item name="android:textColor">#0000ff</item>
    </style>

    <attr name="custom_defStyleAttr" format="reference"/>
    <style name="custom_defStyleAttr">
        <item name="android:textColor">#00ff00</item>
    </style>

</resources>